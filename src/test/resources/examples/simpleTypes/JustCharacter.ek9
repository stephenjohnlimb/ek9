defines module com.customer.justcharacter

  defines function
    
    showComparison()
      ->
        c1 as Character
        c2 as Character      
      
      stdout <- Stdout()  
      if c1 < c2
        stdout.println($c1 + " < " + $c2)
      if c1 <= c2
        stdout.println($c1 + " <= " + $c2)
      if c1 > c2
        stdout.println($c1 + " > " + $c2)
      if c1 >= c2
        stdout.println($c1 + " >= " + $c2)
        
      if c1 == c2
        stdout.println($c1 + " == " + $c2)  
      
      if c1 != c2
        stdout.println($c1 + " != " + $c2)
          
