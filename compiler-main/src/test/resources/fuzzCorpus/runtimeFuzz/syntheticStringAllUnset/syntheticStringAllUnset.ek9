#!ek9
<?-
  Runtime fuzz test: Synthetic $ operator - all fields unset.

  Tests that the synthetic string operator produces the expected format
  when all fields are unset: "ClassName(field1=?, field2=?)"
-?>
defines module fuzz.runtime.synthetic.string.allunset

  defines class

    TestPoint
      x <- Integer()
      y <- Integer()

      TestPoint()
        ->
          xVal as Integer
          yVal as Integer
        this.x :=: xVal
        this.y :=: yVal

      default operator ?
      default operator $

  defines program

    SyntheticStringAllUnset()
      stdout <- Stdout()

      stdout.println("Test: Synthetic $ with all fields unset")

      //Both fields unset
      p <- TestPoint(Integer(), Integer())

      //Verify set status
      if p?
        stdout.println("Point isSet: true (unexpected)")
      else
        stdout.println("Point isSet: false (expected)")

      //Get string representation
      s <- $p

      stdout.println("String: " + s)

      //Verify format
      if s.contains("x=?")
        stdout.println("PASS: Contains x=?")
      else
        stdout.println("FAIL: Missing x=?")

      if s.contains("y=?")
        stdout.println("PASS: Contains y=?")
      else
        stdout.println("FAIL: Missing y=?")

      stdout.println("Test complete")

//EOF
