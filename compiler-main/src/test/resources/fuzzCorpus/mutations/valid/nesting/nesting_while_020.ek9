      depth1 <- 0
      while depth1 < maxDepth
        depth2 <- 0
        while depth2 < maxDepth
          depth3 <- 0
          while depth3 < maxDepth
            depth4 <- 0
            while depth4 < maxDepth
              depth5 <- 0
              while depth5 < maxDepth
                depth6 <- 0
                while depth6 < maxDepth
                  depth7 <- 0
                  while depth7 < maxDepth
                    depth8 <- 0
                    while depth8 < maxDepth
                      depth9 <- 0
                      while depth9 < maxDepth
                        depth10 <- 0
                        while depth10 < maxDepth
                          result: result + 1
                          depth10: depth10 + 1
                        depth9: depth9 + 1
                      depth8: depth8 + 1
                    depth7: depth7 + 1
                  depth6: depth6 + 1
                depth5: depth5 + 1
              depth4: depth4 + 1
            depth3: depth3 + 1
          depth2: depth2 + 1
        depth1: depth1 + 1

      assert result?

