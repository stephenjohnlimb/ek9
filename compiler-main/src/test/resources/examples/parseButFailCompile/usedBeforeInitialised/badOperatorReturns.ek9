#!ek9
<?-
  Just tests different aspects of failing to initialise a return symbol for an operator.
  But this tests this out on a number of constructs.
  Only test one operator of each construct type - this should be sufficient.
-?>
defines module bad.operators.return

  defines record

    R1
      override operator ? as pure
        <- rtn <- true

      operator <=> as pure
        -> arg0 as R1
        @Error: PRE_IR_CHECKS: RETURN_NOT_ALWAYS_INITIALISED
        <- rtn as Integer?
        assert arg0?

  defines trait

    //Valid example to be used with dynamic class later
    T0
      override operator ? as pure
        <- rtn <- true

      operator <=> as pure
        -> arg0 as T0
        <- rtn as Integer: 0

    T1
      override operator ? as pure
        <- rtn <- true

      operator <=> as pure
        -> arg0 as T1
        @Error: PRE_IR_CHECKS: RETURN_NOT_ALWAYS_INITIALISED
        <- rtn as Integer?
        assert arg0?

  defines class
    Class1

      override operator ? as pure
        <- rtn <- true

      operator <=> as pure
        -> arg0 as Class1
        @Error: PRE_IR_CHECKS: RETURN_NOT_ALWAYS_INITIALISED
        <- rtn as Integer?
        assert arg0?

  defines component
    Component1
      override operator ? as pure
        <- rtn <- true

      operator <=> as pure
        -> arg0 as Component1
        @Error: PRE_IR_CHECKS: RETURN_NOT_ALWAYS_INITIALISED
        <- rtn as Integer?
        assert arg0?

  defines function
    DriverForDynamicClass()
      dynamic <- () with trait T0 as class
        override operator <=> as pure
          -> arg0 as T0
          @Error: PRE_IR_CHECKS: RETURN_NOT_ALWAYS_INITIALISED
          <- rtn as Integer?
          assert arg0?

      //Just so it is referenced
      assert dynamic?

//EOF