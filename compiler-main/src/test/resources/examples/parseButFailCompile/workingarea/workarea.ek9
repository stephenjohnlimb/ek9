#!ek9
defines module bytecode.test

  defines function

    getTemperature()
      -> country as String
      <- temp as Integer: Integer()

      if country == "US"
        temp: 75
      else if country == "GB"
        temp: 20

    testIfElseIfWithGuards()
      <-
        result <- String()

      // First if: guard usTemp, condition > 70
      if usTemp <- getTemperature("US") with usTemp > 70
        result: "Warm in US: " + $usTemp
      // Second else-if: NEW guard gbTemp, condition > 15
      else if gbTemp <- getTemperature("GB") with gbTemp > 15
        result: "Mild in GB: " + $gbTemp
      // Final else: no guard
      else
        result: "Temperature unavailable or too cold"

  defines program

    TestIfElseIf()
      stdout <- Stdout()
      result <- testIfElseIfWithGuards()
      stdout.println(result)

//EOF
